@{
    ViewData["Title"] = "Reference Search";
}
<h1>@ViewData["Title"]</h1>
<div class="chapterSelector mb-3">
    <label for="bookId">Book</label>
    <select id="bookId" class="form-select bookId">
        <!-- Dynamically populated by JS -->
    </select>

    <label for="chapterNumber" class="mt-2">Chapter</label>
    <select id="chapterNumber" class="form-select chapterNumber">
        <!-- Dynamically populated by JS -->
    </select>
</div>

<div id="chapterVerses" class="mt-3">
    <ul class="list-group">
        <!-- Verses will populate here -->
    </ul>
</div>
<div id="pagination-container" class="mt-3 d-flex justify-content-center"></div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/chapterView.js"></script>
}